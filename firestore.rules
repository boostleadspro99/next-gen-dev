rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'super_admin';
    }

    // --- Collections ---

    match /users/{userId} {
      allow read: if isUser(userId) || isAdmin();
      allow create: if isUser(userId) && request.resource.data.role == 'client';
      allow update: if isAdmin() || (isUser(userId) && request.resource.data.role == resource.data.role);
    }

    match /clients/{clientId} {
      allow read: if isUser(clientId) || isAdmin();
      allow create: if isUser(clientId) || isAdmin();
      allow update: if isAdmin() || (
        isUser(clientId)
        && request.resource.data.plan == resource.data.plan
        && request.resource.data.subscriptionStatus == resource.data.subscriptionStatus
        && request.resource.data.setupFeeStatus == resource.data.setupFeeStatus
        && request.resource.data.billingCycle == resource.data.billingCycle
        && request.resource.data.currentPeriodStart == resource.data.currentPeriodStart
        && request.resource.data.currentPeriodEnd == resource.data.currentPeriodEnd
        && request.resource.data.nextBillingDate == resource.data.nextBillingDate
      );
    }

    match /projects/{projectId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.clientId == request.auth.uid);
      allow list: if isAdmin() || (isAuthenticated() && request.query.limit <= 100); 
      allow create: if isAdmin() || (isAuthenticated() && request.resource.data.clientId == request.auth.uid);
      allow update: if isAdmin();
    }

    match /tickets/{ticketId} {
      // Allow read if admin or if the ticket belongs to the user
      allow read: if isAdmin() || (isAuthenticated() && resource.data.clientId == request.auth.uid);
      
      // Allow listing (queries)
      // For clients, Firestore will automatically filter based on the query they send.
      // The crucial part is that the security rule MUST allow the operation.
      allow list: if isAdmin() || (isAuthenticated()); 

      allow create: if isAuthenticated() && request.resource.data.clientId == request.auth.uid;
      allow update: if isAdmin() || (isAuthenticated() && resource.data.clientId == request.auth.uid);

      match /messages/{messageId} {
        allow read, create: if isAdmin() || (isAuthenticated() && get(/databases/$(database)/documents/tickets/$(ticketId)).data.clientId == request.auth.uid);
      }
    }

    match /invoices/{invoiceId} {
        // Direct document read: admin or document belongs to user
        allow read: if isAdmin() || (isAuthenticated() && resource.data.clientId == request.auth.uid);
        
        // Query/list: admin or authenticated user querying invoices
        // For non-admin users, we need to ensure they can only query their own invoices
        // The query in getInvoicesByClient filters by clientId == user.uid
        allow list: if isAdmin() || (
          isAuthenticated() && 
          request.query != null &&
          request.query.where != null &&
          request.query.where.size() >= 1 &&
          request.query.where[0].field == 'clientId' &&
          request.query.where[0].op == '==' &&
          request.query.where[0].value == request.auth.uid
        );
        allow write: if isAdmin();
    }

    match /adminLogs/{logId} {
      allow read, write: if isAdmin();
    }

    match /simulations/{simId} {
       allow create: if true;
       allow read: if (resource.data.userId == request.auth.uid) || isAdmin();
    }
  }
}